<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="resources/css/index.css">
    <link rel="stylesheet" href="resources/css/categoria.css">
    <link rel="stylesheet" href="resources/css/transaction.css">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1.7.3/glider.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400;500;600;700&display=swap"
        rel="stylesheet">
</head>

<body>
    <header class="header">
        <h3 class="alltitle">Transactions</h3>


    </header>

    <div class="container">


       

            <form id="formEnviar" class="calendario" action="/transactions" method="post">
                <label for="fecha_actual">Transactions date: </label>
                <input type="date" name="fecha_actual" id="fecha_actual" value="<%= fecha_actual %>">
                
            </form>
            
            <% if (datos==0 && ingresos==false) { %>
                <div class="payment-card">
                        <h2 class="payment-card__title">Aún no se registran transacciones en esta fecha.</h2>
                        
                    </div>
                
           <%  }else{ %>
            <% for(x of datos){ if(x[x.nombre]!=0){%>
                    
                    <div class="payment-card">
                        <h2 class="payment-card__title">Categoría de Pago: <%= x.nombre %></h2>
                        <p class="payment-card__method">Método de Pago: <%= x.cuentas %> </p>
                        <% if(x[x.nombre]> 0){ %>
                        <p class="payment-card__amount">Monto Pagado: <%= x[x.nombre] %></p>
                        <% }else{ %>
                        <p class="payment-card__amount" style="color:#0da10d">Dinero recuperado:  <%= Math.abs(Math.abs(x[x.nombre])) %></p>
                        <% } %>

                        <p class="payment-card__note">Nota del Pago: <%= x.notes %> </p>
                    </div>
                    
                <% }} %>

           <%  }%>


    <!-- INGRESOS A LA CUENTA -->
        <% if(ingresos!=false){ %>
            <% if (ingresos.length!=0) { %>
                <% for(x of ingresos){ %>
                
                    <div class="payment-card">
                        <h2 class="payment-card__title">Causa de ingreso: <%= x.about %>
                        </h2>
                        <p class="payment-card__method">Método de Pago: <%= x.name %>
                        </p>
                        <% if (x.cash!=0){ %>
                            <p class="payment-card__amount" style="color:#0da10d ;">Monto ingresado: <%= x.cash %>
                        </p><% }else{

                        %><p class="payment-card__amount" style="color:#0da10d ;">Monto ingresado: <%= x.card %>
                        <% }%>
                    

                         <p class="payment-card__note">Nota del ingreso: <%= x.note %></p>
                    </div>
                
                    <% }} %>
        <% } %>
            
                



    </div>

    <nav class="naav">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link active" href="/">Cuentas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/categorias">Categorias</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/transactions">Transacciones</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/resumen">Resumen</a>
            </li>
        </ul>
    </nav>



</body>

</html>
<script>
    fecha_actual.addEventListener("change", () => {
            formEnviar.submit()
           
        })
</script>
